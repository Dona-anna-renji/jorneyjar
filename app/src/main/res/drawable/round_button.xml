<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set the solid color of the button -->
    <solid android:color="#000000"/> <!-- Black background color -->

    <!-- Set the radius for the rounded corners -->
    <corners android:radius="16dp"/> <!-- Adjust the radius for more or less roundness -->

    <!-- Optional: Add padding inside the button -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp"/>
</shape>
